/* pages/search/search.wxss */
page{
    background: #fff;
}
/* zmui-top */
.zmui-top {
    height: 200rpx;
}

.zmui-top-bar {
    position: fixed;
    width: 100%;
    z-index: 99;
    left: 0;
    top: 0;
    height: 200rpx;
    background: #F86564;
    border-radius: 0 0 48rpx 48rpx;
}

.zmui-top-search {
    position: absolute;
    display: flex;
    left: 45rpx;
    bottom: 66rpx;
    width: 430rpx;
    height: 64rpx;
    border: 1px solid #FFFFFF;
    border-radius: 32rpx;
}

.zmui-top-icon {
    padding: 10rpx 20rpx 0 20rpx;
}

.zmui-top-line {
    margin-top: 12rpx;
    width: 1px;
    height: 38rpx;
    background: #FFFFFF;
    overflow: hidden;
}

.zmui-top-icon-img {
    width: 32rpx;
    height: 32rpx;
}

.zmui-top-input-class {
    padding: 5rpx 0 0 20rpx;
    height: 30rpx;
    line-height: 30rpx;
    font-size: 30rpx;
    color: #FFFFFF;
}

/* zmui-history */
.zmui-history {
    overflow: hidden;
}

.zmui-history-title {
    display: flex;
    padding: 0 30rpx;
    height: 100rpx;
    line-height: 100rpx;
}

.zmui-history-name {
    flex: 1;
    font-size: 32rpx;
    color: #2F2F2F;
}

.zmui-history-but {
    display: flex;
}

.zmui-history-del-text {
    padding-right: 10rpx;
    font-size: 28rpx;
    color: #2F2F2F;
}

.zmui-history-del-img {
    width: 28rpx;
    height: 28rpx;
}

.zmui-history-ul {
    position: relative;
}

.zmui-history-li {
    float: left;
    font-size: 28rpx;
    color: #2F2F2F;
    margin-bottom: 20rpx;
    padding: 0 30rpx;
    height: 65rpx;
    line-height: 65rpx;
    background: rgba(238, 238, 238, 0.6);
    border-radius: 33rpx;
    margin-left: 25rpx;
}

.zmui-history-more {
    float: left;
    margin-bottom: 20rpx;
    padding: 0 30rpx;
    height: 65rpx;
    line-height: 65rpx;
    background: rgba(238, 238, 238, 0.6);
    border-radius: 33rpx;
    margin-left: 25rpx;
}

.zmui-history-more-img {
    width: 24rpx;
    height: 12rpx;
}

/* zmui-guess-ul */
.zmui-guess {
    overflow: hidden;
}

.zmui-guess-title {
    display: flex;
    height: 100rpx;
    line-height: 100rpx;
    padding: 0 30rpx;
}

.zmui-guess-name {
    flex: 1;
    font-size: 32rpx;
    color: #2F2F2F;
}

.zmui-guess-but {
    display: flex;
}

.zmui-guess-del-text {
    font-size: 28rpx;
    color: #2F2F2F;
    padding-right: 10rpx;
}

.zmui-guess-del-img {
    width: 28rpx;
    height: 26rpx;
}

.zmui-guess-ul {
    position: relative;
}

.zmui-guess-li {
    float: left;
    font-size: 28rpx;
    color: #2F2F2F;
    margin-bottom: 20rpx;
    padding: 0 30rpx;
    height: 65rpx;
    line-height: 65rpx;
    background: rgba(238, 238, 238, 0.6);
    border-radius: 33rpx;
    margin-left: 25rpx;
}

/* zmui-list */
.zmui-list {
    display: flex;
    padding-top: 20rpx;
}

.zmui-list-dl {
    float: left;
    padding-left: 30rpx;
}

.zmui-list-dt {
    height: 70rpx;
}

.zmui-list-li {
    display: flex;
    width: 480rpx !important;
    height: 90rpx;
}

.zmui-list-dd-img {
    width: 93rpx;
    height: 70rpx;
    border-radius: 10rpx;
}

.zmui-list-dd-tag {
    margin-top: 8rpx;
    margin-left: 20rpx;
    text-align: center;
    width: 26rpx;
    height: 26rpx;
    line-height: 26rpx;
    background: #F86564;
    border-radius: 2rpx;
    font-size: 20rpx;
    color: #FFFFFF;
}

.zmui-list-dt-img {
    width: 126rpx;
    height: 31rpx;
}

.zmui-list-dd-num {
    width: 30rpx;
    font-size: 28rpx;
    font-weight: bold;
    color: rgba(186, 186, 186, 1);
}

.zmui-list-dd-one {
    color: rgba(236, 38, 24, 1);
}

.zmui-list-dd-name {
    font-size: 28rpx;
    color: #2F2F2F;
}

.zmui-list-right {
    height: 130rpx;
}

.zmui-list-right .zmui-list-dd-name {
    line-height: 70rpx;
    padding-left: 20rpx;
}
/* zmui-good-title */
.zmui-good-title {
    padding: 30rpx;
    display: flex;
    overflow: hidden;
}

.zmui-good-title-icon {
    width: 56rpx;
}

.zmui-good-title-img {
    width: 48rpx;
    height: 20rpx;
}

.zmui-good-title-name {
    flex: 1;
    height: 54rpx;
    line-height: 54rpx;
    font-size: 36rpx;
    color: #2F2F2F;
    font-weight: bold;
}
