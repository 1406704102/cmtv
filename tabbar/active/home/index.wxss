/* zmui-good-title */
.zmui-good-title {
    padding: 30rpx;
    display: flex;
    overflow: hidden;
}

.zmui-good-title-icon {
    width: 56rpx;
}

.zmui-good-title-img {
    width: 48rpx;
    height: 20rpx;
}

.zmui-good-title-name {
    flex: 1;
    height: 54rpx;
    line-height: 54rpx;
    font-size: 36rpx;
    color: #2F2F2F;
    font-weight: bold;
}

.zmui-title-button {
    font-size: 24rpx;
    color: #505050;
    font-weight: bold;
    width: 120rpx;
    height: 54rpx;
    line-height: 54rpx;
    text-align: center;
    border: 4rpx solid #EEEEEE;
    border-radius: 27rpx;
}

.zmui-good-title-tag {
    flex: 1;
}

.zmui-good-title-ul {
    display: flex;
}

.zmui-good-title-li {
    height: 54rpx;
    line-height: 54rpx;
    padding-right: 20rpx;
    font-size: 26rpx;
    color: #2F2F2F;
}

.zmui-good-title-on {
    font-size: 36rpx;
    color: #2F2F2F;
    font-weight: bold;
}


/* zmui-banner */
.zmui-banner {
    padding-top: 30rpx
}

.zmui-banner-swiper {
    height: 306rpx !important;
    background: #FFFFFF;
}

.zmui-banner-swiper .zmui-swiper-li {
    width: 710rpx !important;
    box-sizing: border-box;
    padding: 0 10rpx;
    left: 20rpx;
}

.zmui-banner-swiper .zmui-swiper-li .zmui-swiper-item {
    width: 100%;
    display: block;
    height: 100%;
    border-radius: 30rpx;
    transition: all 0.2s ease-in 0s;
    overflow: hidden;
}

.zmui-swiper-item image {
    width: 710rpx;
    height: 310rpx;
}

.zmui-banner-swiper .wx-swiper-dot {
    width: 8rpx;
    height: 8rpx;
    display: inline-flex;
    background: none;
    justify-content: space-between;
}

.zmui-banner-swiper .wx-swiper-dot::before {
    content: '';
    flex-grow: 1;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 16rpx;
    overflow: hidden;
}

.zmui-banner-swiper .wx-swiper-dot-active::before {
    background: #fff;
}

.zmui-banner-swiper .wx-swiper-dot.wx-swiper-dot-active {
    width: 16rpx;
}
