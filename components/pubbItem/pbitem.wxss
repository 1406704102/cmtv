/**index.wxss**/

.item {
    display: inline-block;
    background: #fff;
    border-radius: 20px;
    box-shadow: 1px 5px 7px -5px #8d8d8d;
    margin-bottom: 20rpx;
    border: 1px #eef0ed solid;
    width: 100%;
    position: relative;
}

.item-img {
    width: 150%;
    border-radius:30rpx 30rpx 0 0;
}
.icon-img {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50%;
}
.SPItem {
    position: absolute;
    top: 10rpx;
    left: 10rpx;
    width: 50rpx;
    height: 24rpx;
    border-radius: 12rpx;
    font-size: 18rpx;
    color: white;
    background: #F86564;
    line-height: 24rpx;
    display: flex;
    justify-content: center;
}
.SPItem2 {
    position: absolute;
    top: -5rpx;
    right: -5rpx;
    width: 30rpx;
    height: 30rpx;
    border-radius: 12rpx;
    font-size: 18rpx;
    /*color: white;*/
    /*background: #64c4f8;*/
    line-height: 24rpx;
    display: flex;
    justify-content: center;
}
.SPItem2 image {
    width: 30rpx;
    height: 30rpx;
}
.item-title {
    margin-left: 10rpx;
    font-size: 14px;
    font-family: 'PingFang SC-Medium';
    margin-top: 10rpx;

    /*只显示2行  */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.bottom {
    padding: 40rpx 10rpx 0 10rpx;
    /*background: greenyellow;*/
    position: relative;
    top:0rpx;
    border-radius: 30rpx 30rpx 0 0;
    /*background: white;*/
}
.video-icon {
    z-index: 1000;
    position: absolute;
    width: 50rpx;
    height: 50rpx;
    /*background: red;*/
    left: 50%;
    top: -27rpx;
    transform: translateX(-50%);
}
.description {
    margin: -40rpx 5rpx 10rpx 10rpx;
    font-size: 12px;
    color: gray;
    /*只显示三行  */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    position: relative;
    bottom: -25rpx;
}
.icon {
    width: 22rpx;
    height: 22rpx;
    margin-right: 4rpx;
    margin-bottom: 5rpx;
}
.icon2 {
    width: 20rpx;
    height: 20rpx;
    margin-right: 4rpx;
}
.author-view {
    padding: 10rpx 0 0rpx 10rpx;
    width: 70%;

}
.footer{
    display: flex;
    justify-content: space-between;
    position: relative;
    bottom: 0rpx;
    margin-top: 30rpx;
}

.footer-right{
    margin-top: 10rpx;
    display: flex;
    justify-content: space-between;
    width: 40%;
    margin-right: 10rpx;
    /*flex-direction: column-reverse;*/
}
.like {
    /*width: 45%;*/
    display: flex;
    justify-content: space-around;
    font-size: 20rpx;
    color: grey;
    align-items: center;
}
.like-text{

}
.avatar {
    width: 25px;
    height: 25px;
    border-radius: 100%;
    float: left;
    margin-right: 5px;
    margin-bottom: 10rpx;
}

.author-name {
    font-size: 13px;
    font-family: 'PingFang SC-Medium';
    color: rgb(58, 57, 57);
    margin-top: 12rpx;
    display: block;
    /*只显示2行  */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.time {
    font-size: 11px;
    font-family: 'PingFang SC-Medium';
    margin-top: 10rpx;
    color: gray;
    display: block;
}
