/* zmui-bar-ul */
.zmui-bar-ul {
    margin-top: -50rpx;
    background: #fff;
    border-radius: 40rpx 40rpx 0 0;
    padding-top: 30rpx;
    white-space: nowrap;
    padding-left: 30rpx;
    height: 100rpx;
    width: 750rpx;
    display: flex;
    justify-content: space-around;
}

.zmui-bar-li {
    position: relative;
    padding-top: 10rpx;
    padding-right: 50rpx;
    width: 300rpx;
    font-size: 26rpx;
    color: #2F2F2F;
    display: flex;
    justify-content:center;
}

.zmui-bar-on {
    position: relative;
    padding-top: 0;
    font-size: 34rpx;
    font-weight: bold;
    color: #2F2F2F;
}

.zmui-bar-li-img {
    position: absolute;
    left: 50%;
    top: 50rpx;
    transform: translateX(-130%);
    width: 30rpx;
    height: 17rpx;
}

.zmui-my-user-btn {
    width: 180rpx;
}

.zmui-my-user-button {
    font-size: 30rpx;
    color: #FFFFFF;
    text-align: center;
    width: 180rpx;
    height: 74rpx;
    line-height: 74rpx;
    border: 1px solid #FFFFFF;
    box-shadow: 0 2rpx 0 0 rgba(221, 80, 80, 0.33);
    border-radius: 37rpx;
}
