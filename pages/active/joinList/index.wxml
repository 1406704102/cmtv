<cu-custom isBack="{{true}}" iconColor="white" bgImage="http://cmtv.xmay.cc/image/live/bg_01.png">
    <view slot="backText" class="text-white">返回</view>
    <view slot="content" class="text-white">{{name}}</view>
</cu-custom>
<view class="flex justify-start flex-wrap align-center bg-white padding-left-sm padding-bottom-sm">
    <view wx:for="{{joinList}}" wx:key="{{item.id}}" class="margin-right-sm margin-top-sm">
        <view class="text-center" style="width: 101.6667rpx">
            <view class="cu-avatar round solid"
                  style="background-image:url({{item.userAvatar}});width: 100rpx;height: 100rpx;"></view>
            <view>
                <view style="width:100rpx" class="text-cut">
                    {{item.userName}}
                </view>
            </view>
        </view>
    </view>
</view>
