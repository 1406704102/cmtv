/* pages/steps/steps.wxss */
page{
    background: #fff;
}
.container{
    position: absolute;
    top: 0;
    width: 750rpx;
}
.zmui-header {
    position: relative;
    width: 100%;
    height: 674rpx;
}

.zmui-header-img {
    width: 100%;
    height: 674rpx;
}

.zmui-header-ul {
    position: absolute;
    left: 0;
    bottom: 160rpx;
    width: 100%;
    z-index: 2;
    display: flex;
}

.zmui-header-li {
    flex: 1;
    text-align: center;
}

.zmui-header-li-name {
    height: 40rpx;
    font-size: 24rpx;
    color: #FFFFFF;
}

.zmui-header-li-num {
    font-size: 32rpx;
    color: #FFFFFF;
    font-weight: bold;
}

.zmui-header-line {
    margin-top: 10rpx;
    width: 1px;
    height: 59rpx;
    background: #FFFFFF;
    overflow: hidden;
}

/* zmui-content */
.zmui-content {
    position: relative;
    top: -130rpx;
    background: #FFFFFF;
    border-radius: 24rpx 24rpx 0 0;
    min-height: 150rpx;
}


/* zmui-btn */
.zmui-btn {
    margin: 0 auto;
}

.zmui-date {
    position: relative;
    height: 320rpx;
}

.zmui-date-bg {
    position: absolute;
    left: 50%;
    top: 50rpx;
    transform: translateX(-50%);
    width: 384rpx;
    height: 232rpx;
}

.zmui-date-ul {
    position: absolute;
    display: flex;
    z-index: 2;
    left: 50%;
    top: 150rpx;
    transform: translateX(-50%);
    width: 384rpx;
    height: 232rpx;
}

.zmui-data-li {
    flex: 1;
    text-align: center;
}

.zmui-data-text {
    font-size: 28rpx;
    color: #777777;
}

.zmui-data-num {
    text-align: center;
    display: flex;
}

.zmui-data-number {
    text-align: right;
    flex: 1;
    font-size: 44rpx;
    font-weight: bold;
    color: #F86564;
}

.zmui-date-unit {
    padding-top: 23rpx;
    flex: 1;
    text-align: left;
    font-size: 20rpx;
    color: #F86564;
}

.zmui-header-title {
    position: absolute;
    width: 100%;
    height: 44px;
    overflow: hidden;
}

.zmui-header-title-back {
    position: absolute;
    left: 30rpx;
    top: 50%;
    transform: translateY(-50%);
}

.zmui-header-title-text {
    text-align: center;
    line-height: 44px;
    font-size: 36rpx;
    color: #FFFFFF;
}

.zmui-header-title-img {
    width: 17rpx;
    height: 33rpx;
}

.zmui-button {
    margin: 0 auto;
    margin-top: 50rpx;
    text-align: center;
    width: 487rpx;
    height: 90rpx;
    line-height: 90rpx;
    border: 1px solid #FFFFFF;
    background: linear-gradient(180deg, #EA5655, #FE8887);
    border-radius: 45rpx;
    font-size: 36rpx;
    color: #FFFFFF;
}

.zmui-button-white {
    margin: 0 auto;
    margin-top: 30rpx;
    text-align: center;
    width: 487rpx;
    height: 90rpx;
    line-height: 90rpx;
    border: 1px solid #EA5655;
    color: #EA5655;
    background: #FFFFFF;
    border-radius: 45rpx;
    font-size: 36rpx;
}

/* zmui-infos */
.zmui-infos {
    margin: 0 40rpx;
    margin-top: 70rpx;
    padding: 30rpx;
    border: 1px solid rgba(229, 229, 229, 0.92);
    background: #FFFFFF;
    box-shadow: 0 3rpx 8rpx 2rpx rgba(229, 229, 229, 0.92);
    border-radius: 10rpx;
}

.zmui-infos-content {
    font-size: 24rpx;
    color: rgba(100, 100, 100, 1);
}

.zmui-infos-title {
    height: 50rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #FB7372;
}

.zmui-infos-li {
    position: relative;
    padding-left: 30rpx;
    height: 50rpx;
    line-height: 50rpx;
}

.zmui-infos-li::before {
    position: absolute;
    content: '';
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 14rpx;
    height: 14rpx;
    background: #FE8887;
    border-radius: 50%;
}

/* zmui-box-bg */
.zmui-box-bg {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 100;
    background: rgba(0, 0, 0, 0.5);
}

.zmui-box-box {
    position: fixed;
    background: #FFFFFF;
    left: 50%;
    top: 50%;
    width: 540rpx;
    height: 338rpx;
    transform: translate(-50%, -50%);
    border-radius: 21rpx;
    z-index: 101;
}

.zmui-box-ok {
    position: absolute;
    left: 50%;
    top: -61rpx;
    transform: translateX(-50%);
}

.zmui-box-title {
    padding-top: 80rpx;
    text-align: center;
    font-size: 38rpx;
    font-weight: bold;
    color: #4F4F4F;
}

.zmui-box-time {
    padding-top: 20rpx;
    text-align: center;
    font-size: 28rpx;
    color: #4F4F4F;
}

.zmui-box-time-big {
    font-weight: bold;
}

.zmui-box-time-small {
    padding-left: 10rpx;
}

.zmui-box-ok-img {
    width: 122rpx;
    height: 121rpx;
}

.zmui-box-time-img {
    width: 31rpx;
    height: 30rpx;
}

.zmui-box-btn {
    position: relative;
}

.zmui-box-button {
    position: absolute;
    left: 50%;
    top: 30rpx;
    transform: translateX(-50%);
    width: 244rpx;
    height: 76rpx;
    text-align: center;
    line-height: 76rpx;
    border: 2px solid #F86564;
    border-radius: 38rpx;
    font-size: 38rpx;
    color: #F86564;
}
